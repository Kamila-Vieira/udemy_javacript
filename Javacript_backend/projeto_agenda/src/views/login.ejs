<%- include('includes/head') %>
<%- include('includes/nav') %>

  <article class="container">
    <section class="row">
      <div class="col-lg-2"></div>

      <div class="col-lg-8 my-3">
        <h1 class="text-center">Criar conta ou entrar</h1>
        <p class="text-center lead">
          Faça login ou crie sua conta abaixo
        </p>

        <%- include('includes/messages') %>

        <div class="row">
          <div class="col lg">
            <h4>Faça seu cadatro</h4>
            <p>Se você ainda não tem conta, preencha o formulário abaixo.</p>
            
            <form class="row g-3" action="/login/register" method="POST">
              <input type="hidden" name="_csrf" value="<%= csrfToken %>" />
              <div class="form-group">
                <label>Seu e-mail</label>
                <input type="email"  class="form-control" placeholder="email@example.com" name="email">
              </div>
              <div class="form-group">
                <label>Sua senha</label>
                <input type="password"  class="form-control" placeholder="Password" name="password">
              </div>
              <div class="form-group">
                <button type="submit" class="btn btn-primary col-6">Criar minha conta</button>
              </div>
            </form>

          </div>
          <div class="col lg">
            <h4>Entrar no sistema</h4>
            <p>Se você já tem conta, faça seu login abaixo.</p>

            <form class="row g-3" action="/login/login" method="POST">
              <input type="hidden" name="_csrf" value="<%= csrfToken %>" />
              <div class="form-group">
                <label>E-mail</label>
                <input type="email" class="form-control" placeholder="email@example.com" name="email">
              </div>
              <div class="form-group">
                <label >Password</label>
                <input type="password" class="form-control" placeholder="Password" name="password">
              </div>
              <div class="form-group">
                <button type="submit" class="btn btn-primary col-4">Entrar</button>
              </div>
            </form>

          </div>
        </div>
      </div>

    </section>
  </article>

<%- include('includes/footer') %>